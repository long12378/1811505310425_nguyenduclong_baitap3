<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D1D1D1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/bglogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:text="Chào bạn,"
        android:textSize="40sp"
        android:textColor="#000"
        />
    <TextView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Nhập số điện thoại để tiếp tục"
        android:layout_weight="1"
        android:textColor="#000"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shapequocgia"
            >
    </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shapequocgia"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:hint="Số điện thoại"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="20">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:weightSum="20">

        <TextView
            android:layout_width="208dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Hoặc đăng nhập bằng"
            android:textColor="#000"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:weightSum="20"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/btnfacebook425"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonfacebook"
                android:text="Fackbook"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/btnemail425"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonemail"
                android:text="Email"
                android:textColor="#fff"
                />

    </LinearLayout>

        <TextView
            android:id="@+id/quitlogin"
            android:layout_width="83dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Bỏ qua"
            android:textColor="#358DD3"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>